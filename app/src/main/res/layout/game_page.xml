<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@drawable/back">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="24dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/tic_tac"
            android:contentDescription="Tic Tac Toy Logo"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TIC TAC TOY"
            android:textColor="#7AA3D2F0"
            android:textSize="28sp"
            android:textStyle="bold"
            android:gravity="center" />
    </LinearLayout>


    <TextView
        android:id="@+id/statusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginBottom="16dp"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let's play "
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginBottom="16dp"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="32dp">
<!--
        <ImageButton
            android:id="@+id/btnX"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/close"
            android:contentDescription="Select X Symbol"
            android:background="@android:color/transparent"
            android:layout_marginEnd="16dp" />

        <ImageButton
            android:id="@+id/btnO"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/o"
            android:contentDescription="Select O Symbol"
            android:background="@android:color/transparent" />-->
    </LinearLayout>

    <GridLayout
        android:id="@+id/boardGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="3"
        android:columnCount="3"
        android:alignmentMode="alignMargins"
        android:useDefaultMargins="true">

        <Button
            android:id="@+id/cell_0"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="6dp"
            android:background="@drawable/board_cell"
            android:contentDescription="Cell 0" />

        <Button
            android:id="@+id/cell_1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="6dp"
            android:background="@drawable/board_cell"
            android:contentDescription="Cell 1" />

        <Button
            android:id="@+id/cell_2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="6dp"
            android:background="@drawable/board_cell"
            android:contentDescription="Cell 2" />

        <Button
            android:id="@+id/cell_3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="6dp"
            android:background="@drawable/board_cell"
            android:contentDescription="Cell 3" />

        <Button
            android:id="@+id/cell_4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="6dp"
            android:background="@drawable/board_cell"
            android:contentDescription="Cell 4" />

        <Button
            android:id="@+id/cell_5"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="6dp"
            android:background="@drawable/board_cell"
            android:contentDescription="Cell 5" />

        <Button
            android:id="@+id/cell_6"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="6dp"
            android:background="@drawable/board_cell"
            android:contentDescription="Cell 6" />

        <Button
            android:id="@+id/cell_7"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="6dp"
            android:background="@drawable/board_cell"
            android:contentDescription="Cell 7" />

        <Button
            android:id="@+id/cell_8"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="6dp"
            android:background="@drawable/board_cell"
            android:contentDescription="Cell 8" />

    </GridLayout>
    <Button
        android:id="@+id/btnViewHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View History"
        android:onClick="viewHistory" />


</LinearLayout>
